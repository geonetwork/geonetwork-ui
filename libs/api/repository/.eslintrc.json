{
  "extends": ["../../../.eslintrc.json"],
  "ignorePatterns": ["!**/*"],
  "plugins": ["import"],
  "overrides": [
    {
      "files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
      "rules": {
        "import/extensions": [
          "error",
          "always",
          {
            "ignorePackages": true,
            "pathGroupOverrides": [
              {
                // ask for file extensions when importing from OL (since we can do granular imports inside the lib)
                "pattern": "ol/{*,*/**}",
                "action": "enforce"
              },
              {
                // ask for file extensions when importing from @geonetowork-ui
                "pattern": "@geonetowork-ui/{*,*/**}",
                "action": "enforce"
              }
            ]
          }
        ]}
    },
    {
      "files": ["*.ts"],
      "rules": {
        "@angular-eslint/directive-selector": [
          "error",
          {
            "type": "attribute",
            "prefix": "geonetworkUi",
            "style": "camelCase"
          }
        ],
        "@angular-eslint/component-selector": [
          "error",
          {
            "type": "element",
            "prefix": "geonetwork-ui",
            "style": "kebab-case"
          }
        ],
        "@angular-eslint/prefer-standalone": "off"
      },
      "extends": [
        "plugin:@nx/angular",
        "plugin:@angular-eslint/template/process-inline-templates"
      ]
    },
    {
      "files": ["*.html"],
      "extends": ["plugin:@nx/angular-template"],
      "rules": {}
    }
  ]
}
